<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:shop.ViewModels"
             x:DataType="viewModels:SupportViewModel"
             x:Class="shop.Views.Main.Account.SupportPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <Grid RowDefinitions="*,auto"
              RowSpacing="15"
              Padding="25">
            
            <Border/>

            <Grid Grid.Row="1"
                  ColumnDefinitions="*,auto">
                <Entry Placeholder="Wiadomość" />
                <Button Text="Wyślij"
                        Grid.Column="1" />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>