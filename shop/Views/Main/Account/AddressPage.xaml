<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:shop.ViewModels"
             xmlns:fas="clr-namespace:shop.Helpers.FontAwesome.Solid"
             x:DataType="viewModels:AddressViewModel"
             x:Class="shop.Views.Main.Account.AddressPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <Grid RowDefinitions="*,auto" Padding="20">

            <Grid RowDefinitions="auto,auto,auto,auto,auto,auto,auto"
                  RowSpacing="10">

                <Border>
                    <!-- <Border.GestureRecognizers> -->
                    <!--     <TapGestureRecognizer Command="{Binding GoToUserDetailsCommand }" /> -->
                    <!-- </Border.GestureRecognizers> -->
                    <Grid RowDefinitions="auto,auto">
                        <Label Text="Miasto"
                               BackgroundColor="{StaticResource Accent}"
                               TextColor="{StaticResource DarkText}"
                               Padding="15,0" />
                        <Grid ColumnDefinitions="*,auto"
                              Grid.Row="1"
                              Padding="15">
                            <Label Text="Warszawa"
                                   VerticalOptions="Center" />
                            <Image Grid.Column="1">
                                <Image.Source>
                                    <FontImageSource FontFamily="FAS"
                                                     Glyph="{x:Static fas:Icon.UserEdit}"
                                                     Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}" />
                                </Image.Source>
                            </Image>
                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Row="1">
                    <!-- <Border.GestureRecognizers> -->
                    <!--     <TapGestureRecognizer Command="{Binding GoToUserDetailsCommand }" /> -->
                    <!-- </Border.GestureRecognizers> -->
                    <Grid RowDefinitions="auto,auto">
                        <Label Text="Kod pocztowy"
                               BackgroundColor="{StaticResource Accent}"
                               TextColor="{StaticResource DarkText}"
                               Padding="15,0" />
                        <Grid ColumnDefinitions="*,auto" Grid.Row="1" Padding="15">
                            <Label Text="00-000"
                                   VerticalOptions="Center" />
                            <Image Grid.Column="1">
                                <Image.Source>
                                    <FontImageSource FontFamily="FAS"
                                                     Glyph="{x:Static fas:Icon.UserEdit}"
                                                     Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}" />
                                </Image.Source>
                            </Image>
                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Row="2">
                    <!-- <Border.GestureRecognizers> -->
                    <!--     <TapGestureRecognizer Command="{Binding GoToUserDetailsCommand }" /> -->
                    <!-- </Border.GestureRecognizers> -->
                    <Grid RowDefinitions="auto,auto">
                        <Label Text="Ulica"
                               BackgroundColor="{StaticResource Accent}"
                               TextColor="{StaticResource DarkText}"
                               Padding="15,0" />
                        <Grid ColumnDefinitions="*,auto" Grid.Row="1" Padding="15">
                            <Label Text="Testowa"
                                   VerticalOptions="Center" />
                            <Image Grid.Column="1">
                                <Image.Source>
                                    <FontImageSource FontFamily="FAS"
                                                     Glyph="{x:Static fas:Icon.UserEdit}"
                                                     Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}" />
                                </Image.Source>
                            </Image>
                        </Grid>
                    </Grid>
                </Border>

                <Border Grid.Row="3">
                    <!-- <Border.GestureRecognizers> -->
                    <!--     <TapGestureRecognizer Command="{Binding GoToUserDetailsCommand }" /> -->
                    <!-- </Border.GestureRecognizers> -->
                    <Grid RowDefinitions="auto,auto">
                        <Label Text="Nr domu/lokalu"
                               BackgroundColor="{StaticResource Accent}"
                               TextColor="{StaticResource DarkText}"
                               Padding="15,0" />
                        <Grid ColumnDefinitions="*,auto" Grid.Row="1" Padding="15">
                            <Label Text="123"
                                   VerticalOptions="Center" />
                            <Image Grid.Column="1">
                                <Image.Source>
                                    <FontImageSource FontFamily="FAS"
                                                     Glyph="{x:Static fas:Icon.UserEdit}"
                                                     Size="20"
                                                     Color="{AppThemeBinding Light={StaticResource DarkText}, Dark={StaticResource LightText}}" />
                                </Image.Source>
                            </Image>
                        </Grid>
                    </Grid>
                </Border>

            </Grid>

            <Button Text="Zapisz"
                    Grid.Row="1" />

        </Grid>
    </ContentPage.Content>
</ContentPage>